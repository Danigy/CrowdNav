[env]
time_limit = 45
time_step = 0.1
val_size = 100
test_size = 500
randomize_attributes = true
draw_screen = true
show_sensors = false
display_fps = 1000

[reward]
success_reward = 1
collision_penalty = -0.25
time_to_collision_penalty = -0.05
discomfort_dist = 0.8
discomfort_penalty_factor = 0.5
potential_reward_weight = 1.0
lookahead_interval = 3.0

[sim]
train_val_sim = hallway_crossing
test_sim = hallway_crossing
square_width = 10
circle_radius = 4
hallway_width = 3
human_num = 3

[humans]
visible = true
policy = orca
radius = 0.3
v_pref = 1
sensor = coordinates
personal_space = 0.8
max_linear_velocity = 1.0
max_angular_velocity = 1.0

[robot]
visible = true
policy = multi_human_rl
radius = 0.3
v_pref = 1
sensor = coordinates
personal_space = 0.8
max_linear_velocity = 1.0
max_angular_velocity = 1.0


