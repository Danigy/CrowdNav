[env]
time_limit = 75
time_step = 0.1
val_size = 100
test_size = 500
randomize_attributes = false
visualize = false
show_sensors = true
display_fps = 1000

[reward]
success_reward = 1
collision_penalty = -1.0
time_to_collision_penalty = 0.0
discomfort_dist = 1.0
discomfort_penalty_factor = 0.5
potential_reward_weight = 1.0
slack_reward = -0.001
energy_cost = -0.001
safe_obstacle_distance = 0.6
safety_penalty_factor = 0.1
lookahead_interval = 3.0

[sim]
train_val_sim = hallway_crossing
test_sim = hallway_crossing
square_width = 10
circle_radius = 4
hallway_width = 6
human_num = 3

[humans]
visible = true
policy = orca
radius = 0.3
v_pref = 1.0
position_noise = 0.05
velocity_noise = 0.05
sensor = coordinates
personal_space = 1.0
max_linear_velocity = 1.0
max_angular_velocity = 1.0

[robot]
visible = false
policy = multi_human_rl
radius = 0.3
v_pref = 0.5
sensor = coordinates
personal_space = 1.0
max_linear_velocity = 1.0
max_angular_velocity = 1.0


