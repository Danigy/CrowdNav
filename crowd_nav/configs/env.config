[env]
time_limit = 45
time_step = 0.1
val_size = 100
test_size = 500
randomize_attributes = false
draw_screen = false
show_sensors = false
display_fps = 1000

[reward]
success_reward = 1
collision_penalty = -0.25
time_to_collision_penalty = 0.0
discomfort_dist = 1.0
discomfort_penalty_factor = 0.5
potential_reward_weight = 1.0
slack_reward = -0.001
energy_cost = -0.001
lookahead_interval = 3.5

[sim]
train_val_sim = hallway_crossing
test_sim = hallway_crossing
square_width = 10
circle_radius = 4
hallway_width = 3
human_num = 1

[humans]
visible = true
policy = orca
radius = 0.3
v_pref = 1
sensor = coordinates
personal_space = 1.0
max_linear_velocity = 0.5
max_angular_velocity = 0.5

[robot]
visible = false
policy = multi_human_rl
radius = 0.3
v_pref = 1
sensor = coordinates
personal_space = 1.0
max_linear_velocity = 0.5
max_angular_velocity = 0.5


